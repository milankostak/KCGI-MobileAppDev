<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".YoutubeVideosActivity">

    <EditText
        android:id="@+id/et_video_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="text"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/bt_set_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_video"
        app:layout_constraintTop_toBottomOf="@id/et_video_id" />

    <WebView
        android:id="@+id/web_view_1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/bt_set_video" />

    <WebView
        android:id="@+id/web_view_2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/web_view_1" />

</androidx.constraintlayout.widget.ConstraintLayout>