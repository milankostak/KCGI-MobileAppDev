<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickSimple"
        android:text="@string/simple_notification"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/complex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickComplex"
        android:text="@string/complex_notification"
        app:layout_constraintTop_toBottomOf="@id/simple" />

</androidx.constraintlayout.widget.ConstraintLayout>
